{
  "name": "witer/codeigniter-mongodb",
  "description": "Native Codeigniter 4 DB driver for MongoDB",
  "keywords": [
    "codeigniter4", "mongodb", "database"
  ],
  "homepage": "https://github.com/WitER/codeigniter-mongodb",
  "authors": [
    {
      "name": "WitER",
      "email": "dimka.witer@gmail.com"
    }
  ],
  "license": "MIT",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/codeigniter4/CodeIgniter4"
    }
  ],
  "require": {
    "php": ">=8.1",
    "mongodb/mongodb": "*"
  },
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "*",
    "codeigniter4/codeigniter4": "dev-develop"
  },
  "autoload": {
    "psr-4": {
      "CodeIgniter\\Database\\MongoDB\\": "src/Database/MongoDB/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  }
}
